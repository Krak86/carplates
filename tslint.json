{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-sonarts",
        "tslint-react",
        "tslint-react-hooks"
    ],
    "jsRules": {},
    "rules": {
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "indent": [true, "spaces"],
        "max-line-length": false,
        "jsx-no-multiline-js": false,
        "jsx-wrap-multiline": false,
        "jsx-no-lambda": false,
        "react-hooks-nesting": {
            "severity": "error",
            "options": {
                "detect-hooks-from-non-react-namespace": true
            }
        },
        "no-big-function": false
    },
    "rulesDirectory": []
}